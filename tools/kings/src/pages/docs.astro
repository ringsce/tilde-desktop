---
const response = await fetch('/public/docs.php');
const posts = await response.json();
---

<Layout>
  <h1>WordPress Posts</h1>
  <ul>
    {posts.map(post => (
      <li key={post.id}>
        <h2>{post.title.rendered}</h2>
        <div innerHTML={post.excerpt.rendered}></div>
        <a href={post.link}>Read More</a>
      </li>
    ))}
  </ul>
</Layout>
